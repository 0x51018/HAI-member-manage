{
  "name": "@apps/api",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate --schema ../../packages/db/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ../../packages/db/prisma/schema.prisma",
    "db:seed": "ts-node ../../packages/db/seed.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@packages/types": "workspace:*",
    "@prisma/client": "5.9.1",
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "prisma": "5.9.1",
    "supertest": "^7.1.4",
    "ts-node-dev": "2.0.0",
    "typescript": "5.6.2",
    "vitest": "^3.2.4"
  }
}
